{{> header lang=htmlWebpackPlugin.options.lang}}

<main role="main">
  <div class="row cta">
    <div class="callout large large-6 medium-12 small-12 columns">
      <div class="text-center">
        <h1>Net7 RemindOthers</h1>
        <p class="lead">{{translate htmlWebpackPlugin.options.lang 'lead'}}</p>
        <a href="#lmore" class="button large">{{translate htmlWebpackPlugin.options.lang 'learnMore'}}</a>
        <a href="/{{htmlWebpackPlugin.options.lang}}/free-trial.html" class="button large hollow">{{translate htmlWebpackPlugin.options.lang 'freeTrialTitle'}}</a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="medium-6 small-12 columns medium-pull-6">
      <h2 id="lmore">{{translate htmlWebpackPlugin.options.lang 'fullyConfReminders'}}</h2>
      <p>{{translate htmlWebpackPlugin.options.lang 'desc1'}}</p>
      <p>{{translate htmlWebpackPlugin.options.lang 'desc2'}}</p>
      <p>{{translate htmlWebpackPlugin.options.lang 'desc3'}}</p>
      <p>{{translate htmlWebpackPlugin.options.lang 'youMay'}} <a href="/{{htmlWebpackPlugin.options.lang}}/free-trial.html">{{translate htmlWebpackPlugin.options.lang 'requestFree'}}</a>.</p>
    </div>
    <div class="medium-6 small-12 columns medium-push-6">
      <img class="thumbnail" src="../../static/rothers_app_{{htmlWebpackPlugin.options.lang}}.png">
    </div>
  </div>
  <hr />
  <div class="row">
    <div class="medium-4 small-12 columns">
      <h3>Campaigns</h3>
      <p>Send campaigns by email or SMS based on the last appointments for you contacts with configurable templates and criteria.</p>
    </div>
    <div class="medium-4 small-12 columns">
      <h3>Open to <b>your</b> feature requests</h3>
      <p>The project is still young, we're open to any feature request you might have and would strive to implement them.</p>
    </div>
    <div class="medium-4 small-12 columns">
      <h3>Immediate reminder</h3>
      <p>Send a quick email when registering an appointment with the time and date details for automatic integration into the personnal calendars of your customers.</p>
    </div>
  </div>
</main>

{{> footer lang=htmlWebpackPlugin.options.lang}}